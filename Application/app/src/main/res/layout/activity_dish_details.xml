<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sage.foodsharebook.Dishes.DishDetailsActivity"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_dish_pic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        >

    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_dish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Platillo"
            android:textSize="@dimen/dish_name"
            />
        <TextView
            android:id="@+id/tv_dish_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion"
            android:textSize="@dimen/dish_decription"
            />
        <TextView
            android:id="@+id/tv_dish_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Receta"
            android:textSize="@dimen/dish_recipe"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_ingredients"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>
</ScrollView>